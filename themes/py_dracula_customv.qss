}

/* /////////////////////////////////////////////////////////////////////////////////////////////////
QScrollArea - Області прокрутки */
QScrollArea {
    background-color: transparent;
    border: none;
}
QScrollArea > QWidget { /* Віджет всередині QScrollArea */
