/* /////////////////////////////////////////////////////////////////////////////////////////////////
QTableWidget - Таблиці */
QTableWidget {	
	background-color: rgb(255, 255, 255); /* Фон самої таблиці */
	padding: 10px;
	border-radius: 5px;
	gridline-color: rgb(204, 204, 204);
	border-bottom: 1px solid rgb(204, 204, 204);
    color: rgb(51, 51, 51); /* Колір тексту в таблиці */
}
QTableWidget::item{
	border-color: rgb(204, 204, 204);
	padding-left: 5px;
	padding-right: 5px;
	gridline-color: rgb(204, 204, 204);
    background-color: rgb(255, 255, 255); /* Фон комірок */
}
QTableWidget::item:selected{
	background-color: rgb(63, 81, 181); /* Акцентний синій */
    color: rgb(255, 255, 255); /* Білий текст */
}
QHeaderView::section{
	background-color: rgb(240, 240, 240); /* Фон заголовків стовпців/рядків */
	max-width: 30px;
	border: 1px solid rgb(204, 204, 204);
	border-style: none;
    border-bottom: 1px solid rgb(204, 204, 204);
    border-right: 1px solid rgb(204, 204, 204);
    color: rgb(51, 51, 51); /* Колір тексту заголовків */
}
QTableWidget::horizontalHeader {	
	background-color: rgb(240, 240, 240);
}
QHeaderView::section:horizontal
{
    border: 1px solid rgb(240, 240, 240);
	background-color: rgb(240, 240, 240);
	padding: 3px;
	border-top-left-radius: 7px;
    border-top-right-radius: 7px;
}
QHeaderView::section:vertical
{
    border: 1px solid rgb(204, 204, 204);
}

/* /////////////////////////////////////////////////////////////////////////////////////////////////
LineEdit - Текстові поля вводу */
QLineEdit {
	background-color: rgb(255, 255, 255);
	border-radius: 5px;
	border: 2px solid rgb(204, 204, 204);
	padding-left: 10px;
	selection-color: rgb(255, 255, 255);
	selection-background-color: rgb(63, 81, 181); /* Акцентний синій */
    color: rgb(51, 51, 51); /* Колір тексту в полі вводу */
}
QLineEdit:hover {
	border: 2px solid rgb(180, 180, 180);
}
QLineEdit:focus {
	border: 2px solid rgb(63, 81, 181);
}

/* /////////////////////////////////////////////////////////////////////////////////////////////////
PlainTextEdit - Багаторядкові текстові поля */
QPlainTextEdit {
	background-color: rgb(255, 255, 255);
	border-radius: 5px;
	padding: 10px;
	selection-color: rgb(255, 255, 255);
	selection-background-color: rgb(63, 81, 181); /* Акцентний синій */
    color: rgb(51, 51, 51); /* Колір тексту */
}
QPlainTextEdit  QScrollBar:vertical {
    width: 8px;
 }
QPlainTextEdit  QScrollBar:horizontal {
    height: 8px;
 }
QPlainTextEdit:hover {
	border: 2px solid rgb(180, 180, 180);
}
QPlainTextEdit:focus {
	border: 2px solid rgb(63, 81, 181);
}

/* /////////////////////////////////////////////////////////////////////////////////////////////////
ScrollBars - Смуги прокрутки */
QScrollBar:horizontal {
    border: none;
    background: rgb(220, 220, 220);
    height: 8px;
    margin: 0px 21px 0 21px;
	border-radius: 0px;
}
QScrollBar::handle:horizontal {
    background: rgb(63, 81, 181); /* Акцентний синій */
    min-width: 25px;
	border-radius: 4px
}
QScrollBar::add-line:horizontal {
    border: none;
    background: rgb(200, 200, 200);
    width: 20px;
	border-top-right-radius: 4px;
    border-bottom-right-radius: 4px;
    subcontrol-position: right;
    subcontrol-origin: margin;
}
QScrollBar::sub-line:horizontal {
    border: none;
    background: rgb(200, 200, 200);
    width: 20px;
	border-top-left-radius: 4px;
    border-bottom-left-radius: 4px;
    subcontrol-position: left;
    subcontrol-origin: margin;
}
QScrollBar::up-arrow:horizontal, QScrollBar::down-arrow:horizontal
{
      background: none;
}
QScrollBar::add-page:horizontal, QScrollBar::sub-page:horizontal
{
      background: none;
}
 QScrollBar:vertical {
	border: none;
    background: rgb(220, 220, 220);
    width: 8px;
    margin: 21px 0 21px 0;
	border-radius: 0px;
 }
 QScrollBar::handle:vertical {	
	background: rgb(63, 81, 181); /* Акцентний синій */
    min-height: 25px;
	border-radius: 4px
 }
 QScrollBar::add-line:vertical {
      border: none;
    background: rgb(200, 200, 200);
      height: 20px;
	border-bottom-left-radius: 4px;
    border-bottom-right-radius: 4px;
      subcontrol-position: bottom;
      subcontrol-origin: margin;
 }
 QScrollBar::sub-line:vertical {
	border: none;
    background: rgb(200, 200, 200);
      height: 20px;
	border-top-left-radius: 4px;
    border-top-right-radius: 4px;
      subcontrol-position: top;
      subcontrol-origin: margin;
 }
 QScrollBar::up-arrow:vertical, QScrollBar::down-arrow:vertical {
      background: none;
 }

 QScrollBar::add-page:vertical, QScrollBar::sub-page:vertical {
      background: none;
 }

/* /////////////////////////////////////////////////////////////////////////////////////////////////
CheckBox */
QCheckBox {
    background-color: transparent;
    color: rgb(51, 51, 51);
    padding: 5px;
}
QCheckBox::indicator {
    border: 3px solid rgb(200, 200, 200);
	width: 15px;
	height: 15px;
	border-radius: 10px;
    background: rgb(230, 230, 230);
}
QCheckBox::indicator:hover {
    border: 3px solid rgb(180, 180, 180);
}
QCheckBox::indicator:checked {
    background: 3px solid rgb(63, 81, 181); /* Акцентний синій */
	border: 3px solid rgb(63, 81, 181);	
	background-image: url(:/icons/images/icons/cil-check-alt.png); /* Переконайтеся, що ресурс існує */
}

/* /////////////////////////////////////////////////////////////////////////////////////////////////
RadioButton */
QRadioButton {
    background-color: transparent;
    color: rgb(51, 51, 51);
    padding: 5px;
}
QRadioButton::indicator {
    border: 3px solid rgb(200, 200, 200);
	width: 15px;
	height: 15px;
	border-radius: 10px;
    background: rgb(230, 230, 230);
}
QRadioButton::indicator:hover {
    border: 3px solid rgb(180, 180, 180);
}
QRadioButton::indicator:checked {
    background: 3px solid rgb(63, 81, 181); /* Акцентний синій */
	border: 3px solid rgb(63, 81, 181);	
}

/* /////////////////////////////////////////////////////////////////////////////////////////////////
ComboBox - Випадаючі списки */
QComboBox{
	background-color: rgb(255, 255, 255);
	border-radius: 5px;
	border: 2px solid rgb(204, 204, 204);
	padding: 5px;
	padding-left: 10px;
    color: rgb(51, 51, 51);
}
QComboBox:hover{
	border: 2px solid rgb(180, 180, 180);
}
QComboBox::drop-down {
	subcontrol-origin: padding;
	subcontrol-position: top right;
	width: 25px;	
	border-left-width: 3px;
	border-left-color: rgb(204, 204, 204);
	border-left-style: solid;
	border-top-right-radius: 3px;
	border-bottom-right-radius: 3px;	
	background-position: center;
	background-repeat: no-reperat;
 }
QComboBox QAbstractItemView { /* Стиль для випадаючого списку (елементів COM1, COM2 і т.д.) */
	color: rgb(51, 51, 51);	
	background-color: rgb(255, 255, 255);
	padding: 10px;
	selection-background-color: rgb(63, 81, 181); /* Акцентний синій */
    selection-color: rgb(255, 255, 255); /* Білий текст */
}

/* /////////////////////////////////////////////////////////////////////////////////////////////////
Sliders - Слайдери */
QSlider::groove:horizontal {
    border-radius: 5px;
    height: 10px;
	margin: 0px;
	background-color: rgb(220, 220, 220);
}
QSlider::groove:horizontal:hover {
	background-color: rgb(210, 210, 210);
}
QSlider::handle:horizontal {
    background-color: rgb(63, 81, 181); /* Акцентний синій */
    border: none;
    height: 10px;
    width: 10px;
    margin: 0px;
	border-radius: 5px;
}
QSlider::handle:horizontal:hover {
    background-color: rgb(92, 107, 192); /* Акцентний синій (hover) */
}
QSlider::handle:horizontal:pressed {
    background-color: rgb(48, 63, 159); /* Акцентний синій (pressed) */
}

QSlider::groove:vertical {
    border-radius: 5px;
    width: 10px;
    margin: 0px;
	background-color: rgb(220, 220, 220);
}
QSlider::groove:vertical:hover {
	background-color: rgb(210, 210, 210);
}
QSlider::handle:vertical {
    background-color: rgb(63, 81, 181); /* Акцентний синій */
	border: none;
    height: 10px;
    width: 10px;
    margin: 0px;
	border-radius: 5px;
}
QSlider::handle:vertical:hover {
    background-color: rgb(92, 107, 192); /* Акцентний синій (hover) */
}
QSlider::handle:vertical:pressed {
    background-color: rgb(48, 63, 159); /* Акцентний синій (pressed) */
}

/* /////////////////////////////////////////////////////////////////////////////////////////////////
CommandLinkButton - Командні кнопки посилання */
QCommandLinkButton {	
	color: rgb(63, 81, 181); /* Акцентний синій */
	border-radius: 5px;
	padding: 5px;
}
QCommandLinkButton:hover {	
	color: rgb(92, 107, 192); /* Акцентний синій (hover) */
