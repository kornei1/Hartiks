/* /////////////////////////////////////////////////////////////////////////////////////////////////
Button - Загальний стиль для кнопок */
QPushButton {
	border: 2px solid rgb(204, 204, 204);
	border-radius: 5px;	
	background-color: rgb(230, 230, 230);
    color: rgb(51, 51, 51);
    padding: 5px 10px;
}
QPushButton:hover {
	background-color: rgb(220, 220, 220);
