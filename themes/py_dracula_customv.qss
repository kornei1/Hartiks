}

/* /////////////////////////////////////////////////////////////////////////////////////////////////
QGroupBox - Групові рамки */
QGroupBox {
    background-color: rgb(255, 255, 255); /* Чисто білий фон для груп */
    border: 1px solid rgb(204, 204, 204);
    border-radius: 5px;
    margin-top: 20px;
    padding-top: 15px;
    padding-left: 10px;
    padding-right: 10px;
    padding-bottom: 10px;
    color: rgb(51, 51, 51);
}
QGroupBox::title {
    subcontrol-origin: margin;
    subcontrol-position: top left;
    color: rgb(63, 81, 181); /* Акцентний синій для заголовка */
    padding: 0 5px;
    background-color: rgb(255, 255, 255); /* Фон заголовка групи, щоб не було прозорості */
}

/* /////////////////////////////////////////////////////////////////////////////////////////////////
QTabWidget - Вкладки */
QTabWidget::pane { /* Панель, яка містить вміст вкладок */
    border: 1px solid rgb(204, 204, 204);
    background-color: rgb(255, 255, 255); /* Чисто білий фон для області вмісту вкладок */
    border-radius: 5px;
    padding: 5px;
}

QTabWidget::tab-bar {
    left: 5px;
}

QTabBar::tab {
    background-color: rgb(240, 240, 240); /* Фон для неактивних вкладок */
    color: rgb(51, 51, 51);
    border: 1px solid rgb(204, 204, 204);
    border-bottom-left-radius: 0px;
    border-bottom-right-radius: 0px;
    border-top-left-radius: 5px;
    border-top-right-radius: 5px;
    padding: 8px 15px;
    margin-right: 2px;
}

QTabBar::tab:selected {
    background-color: rgb(255, 255, 255); /* Фон для активної вкладки */
    color: rgb(51, 51, 51);
    border-bottom-color: rgb(255, 255, 255); /* Зливається з фоном панелі */
    border-top: 2px solid rgb(63, 81, 181); /* Акцентний синій */
}

QTabBar::tab:hover {
    background-color: rgb(230, 230, 230); /* Фон при наведенні на вкладку */
}

QTabBar::tab:!selected {
    margin-top: 3px;
}

/* /////////////////////////////////////////////////////////////////////////////////////////////////
QLabel - Загальний стиль для QLabel */
QLabel {
    color: rgb(51, 51, 51);
