/* /////////////////////////////////////////////////////////////////////////////////////////////////
QGroupBox - Групові рамки */
QGroupBox {
    background-color: rgb(40, 44, 52); /* Темний фон для груп */
    border: 1px solid rgb(44, 49, 58); /* Невелика рамка */
    border-radius: 5px; /* Заокруглені кути */
    margin-top: 20px; /* Відступ зверху для заголовка групи */
    padding-top: 15px; /* Внутрішній відступ зверху, щоб текст не перекривав рамку */
    padding-left: 10px; /* Внутрішній відступ зліва */
    padding-right: 10px; /* Внутрішній відступ справа */
    padding-bottom: 10px; /* Внутрішній відступ знизу */
    color: rgb(221, 221, 221); /* Колір тексту всередині групи */
}
QGroupBox::title {
    subcontrol-origin: margin;
    subcontrol-position: top left; /* Розміщення заголовка групи */
    color: rgb(189, 147, 249); /* Колір тексту заголовка */
    padding: 0 5px; /* Відступ заголовка */
    background-color: transparent; /* Переконайтесь, що фон заголовка прозорий */
}

/* /////////////////////////////////////////////////////////////////////////////////////////////////
QTabWidget - Вкладки */
QTabWidget::pane { /* Панель, яка містить вміст вкладок */
    border: 1px solid rgb(44, 49, 58);
    background-color: rgb(40, 44, 52); /* Темний фон для області вмісту вкладок */
    border-radius: 5px;
    padding: 5px; /* Відступ всередині панелі */
}

QTabWidget::tab-bar {
    left: 5px; /* відступ від лівого краю */
}

QTabBar::tab {
    background-color: rgb(33, 37, 43); /* Фон для неактивних вкладок */
    color: rgb(189, 147, 249); /* Колір тексту неактивних вкладок */
    border: 1px solid rgb(44, 49, 58);
    border-bottom-left-radius: 0px;
    border-bottom-right-radius: 0px;
    border-top-left-radius: 5px;
    border-top-right-radius: 5px;
    padding: 8px 15px; /* Відступи всередині вкладки */
    margin-right: 2px; /* Відступ між вкладками */
}

QTabBar::tab:selected {
    background-color: rgb(40, 44, 52); /* Фон для активної вкладки */
    color: rgb(255, 255, 255); /* Колір тексту активної вкладки */
    border-bottom-color: rgb(40, 44, 52); /* Зливається з фоном панелі */
    border-top: 2px solid rgb(189, 147, 249); /* Смужка над активною вкладкою */
}

QTabBar::tab:hover {
    background-color: rgb(44, 49, 58); /* Фон при наведенні на вкладку */
}

QTabBar::tab:!selected { /* Стиль для не вибраних вкладок */
    margin-top: 3px; /* Трохи опустити не вибрані вкладки */
}

