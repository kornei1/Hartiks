/* /////////////////////////////////////////////////////////////////////////////////////////////////
QTableWidget - Таблиці */
QTableWidget {	
	background-color: rgb(40, 44, 52); /* Фон самої таблиці - зроблено темним */
	padding: 10px;
	border-radius: 5px;
	gridline-color: rgb(44, 49, 58);
	border-bottom: 1px solid rgb(44, 49, 60);
    color: rgb(221, 221, 221); /* Колір тексту в таблиці */
}
QTableWidget::item{
	border-color: rgb(44, 49, 60);
	padding-left: 5px;
	padding-right: 5px;
	gridline-color: rgb(44, 49, 60);
    background-color: rgb(40, 44, 52); /* Фон комірок */
}
QTableWidget::item:selected{
	background-color: rgb(189, 147, 249); /* Колір виділених комірок */
}
QHeaderView::section{
	background-color: rgb(33, 37, 43); /* Фон заголовків стовпців/рядків */
	max-width: 30px;
	border: 1px solid rgb(44, 49, 58);
	border-style: none;
    border-bottom: 1px solid rgb(44, 49, 60);
    border-right: 1px solid rgb(44, 49, 60);
    color: rgb(221, 221, 221); /* Колір тексту заголовків */
}
QTableWidget::horizontalHeader {	
	background-color: rgb(33, 37, 43);
}
QHeaderView::section:horizontal
{
    border: 1px solid rgb(33, 37, 43);
	background-color: rgb(33, 37, 43);
	padding: 3px;
	border-top-left-radius: 7px;
    border-top-right-radius: 7px;
}
QHeaderView::section:vertical
{
    border: 1px solid rgb(44, 49, 60);
}

